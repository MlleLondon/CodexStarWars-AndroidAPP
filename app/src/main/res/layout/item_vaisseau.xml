<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5sp">

    <ImageView
        android:id="@+id/imageViewItemVaisseau"
        android:layout_margin="10sp"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@string/photo_profil" />
    <LinearLayout
        android:layout_width="2sp"
        android:layout_height="match_parent"
        android:layout_margin="5sp"
        android:orientation="vertical">
    </LinearLayout>
    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:layout_margin="10sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewItemVaisseauName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="3sp"
            android:textColor="#233D67"
            android:textStyle="bold"
            android:lineBreakWordStyle="phrase"
            android:text="Destroyer Stellaire de classe Venator" />

        <TextView
            android:id="@+id/textViewItemVaisseauTaille"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="3sp"
            android:text="XXXXXm" />

        <TextView
            android:id="@+id/textViewItemVaisseauEquipage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="3sp"
            android:text="Equipage : 165" />

    </LinearLayout>
</LinearLayout>